  <div class="mybanner">
    <div class="container">
      <div class="mybanner__wrap">
          <div class="title">
            <h2>
              {{section.settings.title}}
            </h2>
          </div>
          <div class="subtitle">
            <p>
              {{section.settings.subtitle}}
            </p>
          </div>
      </div>
    </div>
    <div class="mybanner__container container">
      <div class="mybanner__slider">
        <div class="swiper mybanner-swiper">
      
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                  <div class="slide__wrap">
                    <div class="slide__img">
                      <img src="{{block.settings.img | img_url: '571x760' }}" alt="#">
                    </div>
                    <div class="slide__title">
                        <h3>
                          {{block.settings.title}}
                        </h3>
                    </div>
                    <div class="slide__subtitle">
                      <p>

                        {{block.settings.subtitle}}
                      </p>
                    </div>
                  </div>
              </div>
            {% endfor %}
          
          </div>
        
          <div class="swiper-pagination"></div>

          
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>

    
          <div class="swiper-scrollbar"></div>
        </div>
      </div>
    </div>
  </div>


{% schema %}
  {
    "name": "Section mybanner",
    "class": "section-mybanner",
    "settings": [
       {
         "type":"text",
         "id":"title",
         "label":"title"
       },
      {
        "type":"text",
         "id":"subtitle",
         "label":"subtitle"
      }
       
    ],
    "blocks": [
		{
			"type": "item",
			"name": "item",
			"settings": [
                {
                    "type": "image_picker",
                    "id": "img",
                    "label": "image "
                },
               {
                   "type":"text",
                   "id":"title",
                   "label":"title"
                 },
                {
                  "type":"text",
                   "id":"subtitle",
                   "label":"subtitle"
                }
			]
		}
	],
   
     "presets": [
    {
      "name": "Section mybanner"
    }
  ]
  }
{% endschema %}