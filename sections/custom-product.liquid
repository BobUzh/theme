{% style %}
  .product__title h1 {
    font-family: Taviraj;
    font-size: 34px;
    font-style: italic;
    font-weight: 500;
    line-height: 41px;
    letter-spacing: 0.25px;
    text-align: left;
  }
  .custom-title {
    font-family: Palo Wide;
    font-size: 16px;
    font-weight: 600;
    line-height: 22px;
    letter-spacing: 0.15px;
    text-align: left;
  }
  .custom-subtitle {
    font-family: Palo;
    font-size: 16px;
    font-weight: 300;
    line-height: 22px;
    letter-spacing: 0.5px;
    text-align: left;
  }
  .input-group {
    position: relative;
    display: flex;
    align-items: center;
  }
  .input-group button {
    color: white;
    position: absolute;
    right: 12px;
    padding: 7px 4px;
    width: 31px;
    height: 32px;
    background: #DBD8D6;
