{% javascript %}
    let mainSection = $("[id^=MainProduct-template--]").parent('section');
  mainSection.css('background', 'linear-gradient(0deg, rgba(255,255,255,1) 53%, rgba(250,247,242,1) 95%, rgba(247,243,236,1) 100%)');

  let varisntSelect = $('.product-form__input--dropdown select');
  let [firstSelect, secondSelect] = varisntSelect;
  let isActive = $(secondSelect).val() != 'no';
  isActive ? $(this).removeClass('product-item_active') : $(this).addClass('product-item_active');

  $('.main-product-item').click(function() {
    let firstSelectedValue = $(firstSelect).val();
    let secondSelectedValue = $(secondSelect).val();

    let newValue = secondSelectedValue == 'no' ?  firstSelectedValue : 'no';

    let isActive = secondSelectedValue != 'no';
    isActive ? $(this).removeClass('product-item_active') : $(this).addClass('product-item_active');

    $(secondSelect).val(newValue).change();
   //document.querySelector('variant-selects .product-form__input:nth-child(2) select').value = 'no';

  });

document.querySelector('variant-selects .product-form__input:nth-child(1) select').addEventListener('change', function(event) {
  if(!document.querySelector('.main-product-item').classList.contains('product-item_active')){
  return;
  }else{
    document.querySelector('variant-selects .product-form__input:nth-child(2) select').value = event.target.value;    
  }
});



{% endjavascript %}

<script>

$('.zip-code button').click(function() {
  let zipsValue = $(this).closest('.input-group').find('#zip').val();
  let zipsString = '{{zips}}';
  let isInclude = zipsString.split(',').some(e => e == zipsValue);

  if(isInclude) {
    $('.event-pointer').each(function() {
      console.log(this);
      $(this).removeClass('event-pointer_disabled')
    })
  } else {
    $('.event-pointer').each(function() {
      $(this).addClass('event-pointer_disabled')
    })
  }
})

</script>