<div class="container">
  <div class="wrap">
    {% render 'raindrop' %}
    <h2>{{ section.settings.title }}</h2>
    <h5>{{ section.settings.text }}</h5>
    <a class="a-btn" href="{{ section.settings.link }}">
      {% render 'icon-rein-left' %}
        {{ section.settings.label }}
      {% render 'icon-rain-right' %}
    </a>
  </div>
</div>
<style>
  .footer-conect .wrap{
    background:url({{ section.settings.img | img_url: 'master'}});  
  }
</style>
{% schema %}
  {
    "name": "Footer conect section",
    "class": "footer-conect",
    "settings": [
       {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
       {
         "type":"text",
         "id":"title",
         "label":"title"
       },
       {
         "type":"text",
         "id":"text",
         "label":"text"
       },
       {
         "type":"url",
         "id":"link",
         "label":"link"
       },
       {
         "type":"text",
         "id":"label",
         "label":"label"
       }
    ],
     "presets": [
    {
      "name": "Footer conect section"
    }
  ]
  }
{% endschema %}