<div class="container">
  <div class="partners-hero-video">
    <video  class="myVideo" width="100%" height="auto" no-controls autoplay loop playsinline muted >
      <source src="{{section.settings.video-url}}" type="video/mp4" />
    </video> 
  </div>
  <h1>{{ section.settings.title }}</h1>
  {{ section.settings.text }}
</div>

{% schema %}
  {
    "name": "Partners hero",
    "class": "partners-hero",
    "settings": [
       {
         "type":"text",
         "id":"title",
         "label":"Title"
       },
       {
         "type":"richtext",
         "id":"text",
         "label":"Text"
       },
       {
        "type": "url",
        "id": "video-url",
        "label": "Video url",
        "info": "Accepts .mp4 links. Upload video in Store Settings > Files and copy link"
       }
    ],
     "presets": [
    {
      "name": "Partners hero"
    }
  ]
  }
{% endschema %}